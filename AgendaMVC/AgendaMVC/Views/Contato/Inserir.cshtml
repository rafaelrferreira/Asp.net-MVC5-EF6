@model AgendaMVC.Models.Contato
@{
    ViewBag.Title = "Inserir";
}

<h2>Inserir</h2>

@using (Html.BeginForm("Inserir", "Contato", FormMethod.Post, new { @class = "form-inline" }))
{
    <fieldset>
        @Html.ValidationSummary(true)
        <legend>Dados do contato</legend>
        <div>
            @Html.LabelFor(model => model.nome)
        </div>
        <div class="form-group">
            @Html.EditorFor(model => model.nome,  new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.nome)
        </div>

        <div>
            @Html.LabelFor(model => model.empresa)
        </div>
        <div>
            @Html.EditorFor(model => model.empresa)
        </div>

        <div style="margin-top: 20px;">
            <input type="submit" value="Enviar" class="btn btn-success" />
        </div>
    </fieldset>
}

<div>@ViewBag.Mensagem</div>
<br />
@Html.ActionLink("Voltar", "Listar", "Contato")